   	<%= form_for(@school) do |f| %>
  		<div class="form-group">
  			<%= f.label :full_address_eng %>
			<%= f.text_field :full_address_eng, :type=>"text", :class=>"form-control", :placeholder=>"Введите адрес школы*", :data=>{:constraints=>"@Required"} %>
				<span class="empty-message">*This field is required.</span>
				<span class="error-message">*This is not a valid name.</span>
		</div>
  		<div class="form-group">
  			<%= f.label :name %>
			<%= f.text_field :name, :type=>"text", :class=>"form-control", :placeholder=>"Название*", :data=>{:constraints=>"@Required @JustLetters"} %>
				<span class="empty-message">*This field is required.</span>
				<span class="error-message">*This is not a valid name.</span>
		</div>
  		<div class="form-group">
  			<%= f.label :company_id %>
  			<%= f.select :company_id, options_from_collection_for_select(@companies, "id", "name", @school.company_id), {}, {:class=>"form-control bootstrap-select"} %>	
  		</div>
		<div class="form-group">	
			<%= f.label :description %>
			<%= f.text_area :description, :placeholder=>"Описание*", :class=>"form-control", :data=>{:constraints=>"@Required @Length(min=20,max=999999)"} %>
				<span class="empty-message">*This field is required.</span>
				<span class="error-message">*The message is too short.</span>
		</div>
		<div class="form-group">	
			<%= f.label :latitude %>
			<%= f.text_field :latitude, :type=>"text", :class=>"form-control", :placeholder=>"Широта" %>
		</div>
		<div class="form-group">
			<%= f.label :longitude %>
			<%= f.text_field :longitude, :type=>"text", :class=>"form-control", :placeholder=>"Долгота" %>
		</div>			
		<div class="form_btns">
	    	<!--%= link_to 'Сохранить', '#', :data=>{:type=>'submit'}, :class=>"more_btn" %-->
	     	<%= f.submit :'Сохранить', :class=>"btn btn-info" %>
		</div>
	<% end %>